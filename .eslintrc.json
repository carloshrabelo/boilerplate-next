{
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"extends": [
		"google",
		"plugin:prettier/recommended",
		"plugin:react/recommended"
	],
	"rules": {
		"func-style": ["error", "expression", { "allowArrowFunctions": true }],
		"new-cap": ["error", { "newIsCap": true }]
	},
	"plugins": ["jest", "react", "prettier"],
	"env": {
		"jest/globals": true,
		"browser": true
	},
	"settings": {
		"react": {
			"version": "16.6"
		}
	}
}
